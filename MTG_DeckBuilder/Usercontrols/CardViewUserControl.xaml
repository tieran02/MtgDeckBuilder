<UserControl x:Class="MTG_DeckBuilder.Usercontrols.CardViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MTG_DeckBuilder.Usercontrols"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="336.794">
    <DockPanel Background="LightSlateGray">
        <TextBlock Text="{Binding name}"
                   TextAlignment="Center"
                   FontWeight="Bold"
                   FontSize="14"
                   DockPanel.Dock="Top"/>

        <Viewbox Margin="5">
            <Image Source="{Binding image}" Stretch="UniformToFill"/>
        </Viewbox>
    </DockPanel>
</UserControl>
